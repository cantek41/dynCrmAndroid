<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:padding="5dp"
  android:background="@color/rowTransparan"
  android:alpha="10"
  android:id="@+id/listRow">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/TextHeaderLight"
      android:id="@+id/rowLargeText" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/TextNormal"
      android:id="@+id/rowSmalTextLeft" />
  </LinearLayout>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="20"
    android:gravity="right">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/rowSmallTextRightFirst"
      android:textColor="@color/TextNormal"
      android:layout_marginTop="1dp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/rowSmallTextSecond"
      android:textColor="@color/TextNormal"
      android:layout_marginTop="5dp" />

  </LinearLayout>
</LinearLayout>
